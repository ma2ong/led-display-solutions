{
  "testing": {
    "unitTests": {
      "enabled": true,
      "threshold": 80,
      "timeout": 5000,
      "coverage": {
        "statements": 80,
        "branches": 75,
        "functions": 85,
        "lines": 80
      }
    },
    "integrationTests": {
      "enabled": true,
      "threshold": 70,
      "timeout": 10000,
      "endpoints": [
        "/api/contact",
        "/api/search",
        "/api/products",
        "/api/comparison"
      ]
    },
    "e2eTests": {
      "enabled": true,
      "threshold": 60,
      "timeout": 30000,
      "scenarios": [
        "user-journey-homepage-to-contact",
        "product-search-and-comparison",
        "mobile-experience-flow",
        "accessibility-compliance"
      ]
    },
    "performanceTests": {
      "enabled": true,
      "loadTimeThreshold": 3000,
      "fmpThreshold": 2000,
      "lcp": 2500,
      "fid": 100,
      "cls": 0.1,
      "memoryThreshold": 50,
      "cpuThreshold": 80
    },
    "accessibilityTests": {
      "enabled": true,
      "wcagLevel": "AA",
      "colorContrastRatio": 4.5,
      "keyboardNavigation": true,
      "screenReaderCompatibility": true,
      "ariaCompliance": true
    },
    "securityTests": {
      "enabled": true,
      "xssProtection": true,
      "csrfProtection": true,
      "sqlInjectionProtection": true,
      "inputValidation": true,
      "authenticationTests": true,
      "authorizationTests": true,
      "dataEncryption": true
    },
    "mobileTests": {
      "enabled": true,
      "touchGestures": true,
      "responsiveDesign": true,
      "performanceOnMobile": true,
      "offlineCapability": true,
      "pwaCompliance": true
    },
    "crossBrowserTests": {
      "enabled": true,
      "browsers": [
        "chrome",
        "firefox",
        "safari",
        "edge"
      ],
      "mobileDevices": [
        "iPhone",
        "Android",
        "iPad"
      ]
    }
  },
  "deployment": {
    "environments": {
      "development": {
        "url": "http://localhost:8000",
        "autoDeployment": true,
        "healthChecks": false,
        "rollbackEnabled": false
      },
      "staging": {
        "url": "https://staging.leddisplaysolutions.com",
        "autoDeployment": false,
        "healthChecks": true,
        "rollbackEnabled": true,
        "requiresApproval": false
      },
      "production": {
        "url": "https://leddisplaysolutions.com",
        "autoDeployment": false,
        "healthChecks": true,
        "rollbackEnabled": true,
        "requiresApproval": true,
        "backupBeforeDeployment": true
      }
    },
    "pipeline": {
      "stages": [
        {
          "name": "test",
          "parallel": true,
          "steps": [
            "unit-tests",
            "integration-tests",
            "security-tests"
          ]
        },
        {
          "name": "build",
          "parallel": false,
          "steps": [
            "compile-assets",
            "optimize-images",
            "minify-code",
            "generate-manifest"
          ]
        },
        {
          "name": "deploy",
          "parallel": false,
          "steps": [
            "backup-current",
            "deploy-files",
            "run-migrations",
            "health-check",
            "smoke-tests"
          ]
        }
      ],
      "notifications": {
        "onSuccess": ["email", "slack"],
        "onFailure": ["email", "slack", "sms"],
        "onRollback": ["email", "slack", "sms"]
      }
    },
    "healthChecks": {
      "enabled": true,
      "endpoints": [
        "/health",
        "/api/status",
        "/api/products"
      ],
      "timeout": 5000,
      "retries": 3,
      "interval": 30000
    },
    "rollback": {
      "enabled": true,
      "automatic": true,
      "conditions": [
        "health-check-failure",
        "error-rate-threshold",
        "performance-degradation"
      ],
      "maxRollbackAttempts": 3
    }
  },
  "reporting": {
    "enabled": true,
    "formats": ["html", "json", "junit", "coverage"],
    "outputDirectory": "./test-reports",
    "archiveReports": true,
    "retentionDays": 30,
    "notifications": {
      "email": {
        "enabled": false,
        "recipients": ["dev-team@leddisplaysolutions.com"],
        "onFailureOnly": false
      },
      "slack": {
        "enabled": false,
        "webhook": "",
        "channel": "#dev-alerts",
        "onFailureOnly": true
      },
      "webhook": {
        "enabled": false,
        "url": "",
        "secret": "",
        "payload": "json"
      }
    },
    "dashboard": {
      "enabled": true,
      "url": "/test-dashboard",
      "realTime": true,
      "metrics": [
        "test-results",
        "coverage",
        "performance",
        "deployment-status"
      ]
    }
  },
  "quality": {
    "gates": {
      "testCoverage": {
        "minimum": 80,
        "blockDeployment": true
      },
      "testPassRate": {
        "minimum": 95,
        "blockDeployment": true
      },
      "performanceScore": {
        "minimum": 80,
        "blockDeployment": false
      },
      "securityScore": {
        "minimum": 90,
        "blockDeployment": true
      },
      "accessibilityScore": {
        "minimum": 85,
        "blockDeployment": false
      }
    },
    "codeAnalysis": {
      "enabled": true,
      "linting": true,
      "complexity": true,
      "duplicateDetection": true,
      "vulnerabilityScanning": true
    },
    "reviewProcess": {
      "required": true,
      "minimumReviewers": 2,
      "requireOwnerApproval": true,
      "blockMergeOnFailedTests": true
    }
  },
  "monitoring": {
    "enabled": true,
    "metrics": [
      "response-time",
      "error-rate",
      "throughput",
      "availability",
      "user-satisfaction"
    ],
    "alerts": {
      "errorRateThreshold": 5,
      "responseTimeThreshold": 3000,
      "availabilityThreshold": 99.5
    },
    "logging": {
      "level": "info",
      "retention": 30,
      "structured": true,
      "includeUserActions": true
    }
  },
  "tools": {
    "testRunner": "custom",
    "coverageReporter": "built-in",
    "performanceMonitor": "lighthouse",
    "accessibilityChecker": "axe-core",
    "securityScanner": "custom",
    "buildTool": "webpack",
    "deploymentTool": "custom"
  }
}